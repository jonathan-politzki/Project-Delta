{
    "version": 2,
    "builds": [
      {
        "src": "package.json",
        "use": "@vercel/node",
        "config": { "distDir": "build" }
      }
    ],
    "routes": [
      { "src": "/(.*)", "dest": "/build/$1" },
      { "handle": "filesystem" },
      { "src": "/.*", "dest": "/build/index.html" }
    ]
  }